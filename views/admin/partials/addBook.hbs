<title>NUEVO LIBRO</title>

<main class="main-container ">
	<h1 class="text-center">GESTIÓN DE LIBRO <span class="material-symbols-outlined">bookmark_add</span></h1>
	<div class="col-md-10 form-book">

		<div class="header-right">
    		<a class="" href="libros">
				<span class="material-symbols-outlined">logout</span>
    		</a>
    	</div>  
		
       <form action="" class="formulario" id="formulario">
			<!-- Grupo: isbn -->
			<div class="formulario__grupo" id="grupo__isbn">
				<label for="isbn" class="formulario__label">Isbn</label>
				<div class="formulario__grupo-input">
					<input type="text" class="formulario__input" name="isbn" id="isbn" placeholder="Ingrese isbn">
					<i class="formulario__validacion-estado fas fa-times-circle"></i>
				</div>
				<p class="formulario__input-error">El isbn tiene que ser de 4 a 16 dígitos y solo puede contener numeros.</p>
			</div>

			<!-- Grupo: titulo -->
			<div class="formulario__grupo" id="grupo__titulo">
				<label for="titulo" class="formulario__label">Titulo</label>
				<div class="formulario__grupo-input">
					<input type="text" class="formulario__input" name="titulo" id="titulo" placeholder="Ingrese titulo">
					<i class="formulario__validacion-estado fas fa-times-circle"></i>
				</div>
				<p class="formulario__input-error">Solo puede contener numeros y letras.</p>
			</div>


			<!-- Grupo: ilustrador -->
			<div class="formulario__grupo" id="grupo__ilustrador">
				<label for="ilustrador" class="formulario__label">Ilustrador</label>
				<div class="formulario__grupo-input">
					<input type="text" class="formulario__input" name="ilustrador" id="ilustrador" placeholder="Ingrese ilustrador">
					<i class="formulario__validacion-estado fas fa-times-circle"></i>
				</div>
				<p class="formulario__input-error">Solo puede contener numeros y letras.</p>
			</div>

			<!-- Grupo: impresion -->
			<div class="formulario__grupo" id="grupo__impresion">
				<label for="impresion" class="formulario__label">Impresion</label>
				<div class="formulario__grupo-input">
					<input type="text" class="formulario__input" name="impresion" id="impresion" placeholder="Encargado de impresion">
					<i class="formulario__validacion-estado fas fa-times-circle"></i>
				</div>
				<p class="formulario__input-error">Solo puede contener numeros y letras.</p>
			</div>

			<!-- Grupo: autor -->
			<div class="formulario__grupo" id="grupo__autor">
				<label for="autor" class="formulario__label">Autor</label>
				<div class="formulario__grupo-input">
					<input type="text" class="formulario__input" name="autor" id="autor" placeholder="Ingrese autor">
					<i class="formulario__validacion-estado fas fa-times-circle"></i>
				</div>
				<p class="formulario__input-error">Solo puede contener letras.</p>
			</div>

			<!-- Grupo: editorial -->
			<div class="formulario__grupo" id="grupo__editorial">
				<label for="editorial" class="formulario__label">Editorial</label>
				<div class="formulario__grupo-input">
					<input type="text" class="formulario__input" name="editorial" id="editorial" placeholder="Ingrese editorial">
					<i class="formulario__validacion-estado fas fa-times-circle"></i>
				</div>
				<p class="formulario__input-error">Solo puede contener letras.</p>
			</div>

			<!-- Grupo: categoria -->

			<div class="formulario__grupo" id="grupo__categoria">
				<label for="categoria" class="formulario__label">Categoria</label>
				<div class="formulario__grupo-input">
					<select class="formulario__input" class="form-select" required aria-label="select example">
						<option value="">Seleccione una categoria</option>
						<option value="1">Fantasia</option>
						<option value="2">Matematicas</option>
						<option value="3">Sociales</option>
				</select>
				</div> 	
    			<p class="formulario__input-error">Seleccione una categoria.</p>			
			</div>
			<!-- Grupo: cantidad -->
			<div class="formulario__grupo" id="grupo__cantidad">
				<label for="cantidad" class="formulario__label">Cantidad</label>
				<div class="formulario__grupo-input">
					<input type="text" class="formulario__input" name="cantidad" id="cantidad" placeholder="Ingrese una cantidad">
					<i class="formulario__validacion-estado fas fa-times-circle"></i>
				</div>
				<p class="formulario__input-error">Solo puede contener numeros.</p>
			</div>

			<div class="formulario__mensaje" id="formulario__mensaje">
				<p><i class="fas fa-exclamation-triangle"></i> <b>Error:</b> Por favor rellena el formulario correctamente. </p>
			</div>

			<div class="formulario__grupo formulario__grupo-btn-enviar">
				<a href="#" type="submit" id="agregarLibro" class="btn btn-dark agre  formulario__btn">Agregar</a>
				<a href="#" id="actualizarLibro" class="btn btn-success mover  formulario__btn">Actualizar</a>
				<p class="formulario__mensaje-exito" id="formulario__mensaje-exito">Formulario enviado exitosamente!</p>
			</div>
		</form>      
	</div>
</main>

